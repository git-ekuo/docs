              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "Update a location in a specific map",
        "parameters": [
          {
            "name": "mapId",
            "in": "path",
            "description": "ID of the map to retrieve",
            "required": true,
