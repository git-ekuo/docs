        }
      }
    }
  },
  "components": {
    "schemas": {
      "Map": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "description": "The name of Map",
            "type": "string"
          },
          "isDeleted": {
            "description": "True if Map is deleted",
            "type": "boolean"
          }
        }
      },
      "Location": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "description": "The name of Map",
            "type": "string"
          },
          "isDeleted": {
            "description": "True if Map is deleted",
            "type": "boolean"
          }
        }
      },
      "NewPlan": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Map"
          },
          {
            "required": [
              "id"
            ],
            "type": "object",
            "properties": {
              "id": {
                "description": "Identification number of the plant",
                "type": "integer",
                "format": "int64"
              }
            }
          }
        ]
      },
      "Error": {
        "required": [
          "error",
          "message"
        ],
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
